{
  "devDependencies": {    
    "copyfiles": "^2.4.1",   
    "npm-watch": "^0.11.0",   
    "static-i18n": "^0.2.10"
  },
  "watch": {
    "i18n": {
      "patterns": [
        "src/**/*.html",
        "src/locale/*"
      ],
      "extensions": "html,yaml"
    },
    "copy": {
      "patterns": [
        "src"
      ],
      "extensions": "*",
      "ignore": [
        "src/**/*.html",
        "src/locale/*"
      ]
    }
  },
  "scripts": {
    "i18n": "static-i18n --locale en --locales en --locales de --output-dir dist --fileFormat yaml src",
    "copy": "copyfiles --up 1 --exclude 'src/**/*.html' --exclude 'src/locales/*' 'src/**/*' dist",
    "watch": "npm-watch",
    "build": "yarn run i18n && yarn run copy"
  }
}
